<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DoiDiemActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tenthumuc"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imvtrove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trove"></ImageView>
        <TextView
            android:id="@+id/thumuc"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi điểm "
            android:textColor="@color/text_black"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="15sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="50dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:padding="2px"
        android:id="@+id/ll_display_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/bg_edittext_user"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_search"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:id="@+id/et_tenhienthi"
            android:paddingLeft="15dp"
            android:hint="Tìm kiếm"
            android:background="@color/text_white"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn hiện tại không có voucher nào"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center">

        </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    </RelativeLayout>

</LinearLayout>