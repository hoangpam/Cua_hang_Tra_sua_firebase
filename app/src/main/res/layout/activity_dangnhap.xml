<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dangnhapts"
    android:orientation="vertical">
    <RelativeLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:padding="2px"
            android:id="@+id/ll_user_name"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_user">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_user_login"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <EditText
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:id="@+id/et_email"
                android:paddingLeft="15dp"
                android:hint="Email"
                android:background="@color/text_white"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:padding="2px"
            android:layout_marginTop="10dp"
            android:id="@+id/ll_user_password"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_user_name"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_user">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_lock"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <EditText
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:id="@+id/et_password"
                android:hint="Mật khẩu"
                android:background="@color/text_white"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <CheckBox
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_user_password"
            android:id="@+id/cb_remember"
            android:text="Nhớ mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cb_remember"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="11"
            android:layout_height="wrap_content">
            <Button
                android:text="Đăng kí"
                android:id="@+id/bt_register1"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_height="40dp"
                android:background="@drawable/bg_bt_login"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <Button
                android:text="Đăng nhập"
                android:id="@+id/bt_login"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_height="40dp"
                android:background="@drawable/bg_register"/>
        </LinearLayout>
        <TextView
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Quên mật khẩu"
            android:layout_below="@+id/ll_"
            android:id="@+id/tv_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:paddingBottom="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal"
            android:text="Bản quyền của sinh viên 07DH trường HuFi"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/text_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Liên hệ: thiendcday@gmail.com"
            android:textColor="@color/text_black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>