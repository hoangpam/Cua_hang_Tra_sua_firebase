<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_thdoc">
    <RelativeLayout
        android:id="@+id/diemtichluy"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        >

            <TextView
                android:id="@+id/tv_tendstluy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm tích luỹ"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/tv_dstluy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/chuakichhoat"
                android:textSize="25dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_dangnhapts">
        <LinearLayout
            android:id="@+id/llccdtluy"
            android:layout_width="match_parent"
            android:layout_height="540sp"
            android:orientation="vertical"
           >
            <RelativeLayout
                android:id="@+id/it_lichsudiemthuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/bg_states"
                android:padding="10dp"
                android:backgroundTint="@color/itemsize"
                >
                <ImageView
                    android:id="@+id/imvlichsudiemthuong"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_history"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_lichsudiemthuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imvlichsudiemthuong"
                    android:text="Lịch sửa điểm thưởng"
                    android:paddingLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textColor="@color/text_black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/it_ctluy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/bg_states"
                android:padding="10dp"
                android:backgroundTint="@color/itemsize"
                >
                <ImageView
                    android:id="@+id/imvctluy"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/star"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_tenctluy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imvctluy"
                    android:text="Cách để tích luỹ điểm thưởng"
                    android:paddingLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textColor="@color/text_black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/it_ddtluy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/bg_states"
                android:padding="10dp"
                android:backgroundTint="@color/itemsize"
                >
                <ImageView
                    android:id="@+id/imvddtluy"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/money"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_tenddtluy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imvddtluy"
                    android:text="Đổi điểm thưởng"
                    android:paddingLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textColor="@color/text_black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/it_quatang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/bg_states"
                android:padding="10dp"
                android:backgroundTint="@color/itemsize"
                >
                <ImageView
                    android:id="@+id/imvquatang"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_gift"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_tenquatang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imvquatang"
                    android:text="Quà tặng"
                    android:paddingLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textColor="@color/text_black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/it_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/bg_states"
                android:padding="10dp"
                android:backgroundTint="@color/itemsize"
                >
                <ImageView
                    android:id="@+id/imvtv"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_privacy"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_tvien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imvtv"
                    android:text="Thành viên"
                    android:paddingLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textColor="@color/text_black"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>