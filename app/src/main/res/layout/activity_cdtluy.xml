<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CDTLuyActivity">
    <LinearLayout
        android:id="@+id/chithi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/gop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Để tích luỹ điểm thưởng bạn cần mua nhiều sản phẩm của chúng tôi  💖💖💖"
            android:textSize="20dp"
            android:textColor="@color/text_black"
            android:layout_marginLeft="5sp"></TextView>
        <ImageView
            android:id="@+id/hinhmua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tenor"
            android:layout_gravity="center"
            ></ImageView>
        <ImageView
            android:id="@+id/imvhinhthucthi"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main"
            android:layout_gravity="center"></ImageView>
        <ImageView
            android:id="@+id/imvhinhthuc"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cuoicaicoi"
            android:layout_gravity="center"></ImageView>

    </LinearLayout>
</LinearLayout>