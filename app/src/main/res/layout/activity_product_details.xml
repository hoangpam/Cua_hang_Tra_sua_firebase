<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.product_detailsActivity"
    android:background="@color/itemchon">
    <LinearLayout
        android:id="@+id/rela_chitiet"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="300sp">

        <LinearLayout
            android:id="@+id/ll_hienthichitiet"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="275sp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_editgiohang"
            >

            <ImageView
                android:id="@+id/imvhinh"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:gravity="center"
                android:background="@drawable/bg_editchitiethinh"/>
        </LinearLayout>

    </LinearLayout>
   <LinearLayout
       android:layout_marginLeft="100dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="vertical"
       android:id="@+id/ll_tendouong">

       <TextView
           android:id="@+id/tv_tenthucuong"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ten thuc uong : Tra sua cute"
           android:textSize="20dp"
           android:textColor="@color/text_orange"></TextView>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_giathucuong"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Gia Tien: 25000"
               android:textSize="20dp"></TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="  VND"
               android:textSize="20sp"
               android:textColor="@color/text_black"></TextView>
       </LinearLayout>



   </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_size"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="27dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:text="Size:"
            android:textColor="@color/text_black"></TextView>
        <Spinner
            android:layout_gravity="center"
            android:id="@+id/spinner1"
            android:layout_width="150dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_item"/>

        <LinearLayout
            android:id="@+id/ll_chonsize"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_giamsoluong"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:background="@drawable/bg_dieuchinh"></Button>

            <TextView
                android:id="@+id/idsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textSize="20dp">

            </TextView>
            <Button
                android:id="@+id/btn_tangsoluong"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:background="@drawable/bg_dieuchinh"></Button>
        </LinearLayout>
    </LinearLayout>

<!--    <Button
        android:id="@+id/btThemTP"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_them"
        android:text="Thêm thành phần"
        android:textAllCaps="false">

    </Button>-->

