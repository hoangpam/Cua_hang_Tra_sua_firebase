    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40sp"
        android:orientation="horizontal"
        >
        <TextView
            android:text="Tổng tiền: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:id="@+id/idTongTien"
            android:text="250000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/chuakichhoat">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  VND"
            android:textSize="20sp"
            android:textColor="@color/text_black"></TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_chovaogiohang"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_giohang"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bg_giohang"
            android:src="@mipmap/ic_giohang" />

    </LinearLayout>


</LinearLayout>